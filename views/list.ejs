<!DOCTYPE html>
<html lang="en">
<%- include('header'); -%>
<body>
    <div class="box" id="heading">
        <h1><%= kindOfDay %>!</h1>
    </div>
    <div class="box">
        <% for(let i=0; i<newListItem.length; i++){ %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= newListItem[i] %></p> 
                </div>
            <% } %>
        <form class="item" action="/" method="POST">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="false">
            <button type="submit" name="button">+</button>
    </form>
    </div>
<%- include('footer'); -%>
